<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <title>Сюрприз</title>
  <style>
    body {
      background: #f8f8f8;
      text-align: center;
      font-family: Arial, sans-serif;
      padding-top: 50px;
    }
    .box {
      width: 200px;
      height: 150px;
      background: #c2a671;
      border: 3px solid #8b6b3d;
      margin: 0 auto;
      position: relative;
      cursor: pointer;
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      color: white;
      font-size: 18px;
    }
    .hidden {
      display: none;
    }
    .image {
      margin-top: 20px;
      max-width: 300px;
      animation: pop 0.6s ease forwards;
    }
    @keyframes pop {
      0% { transform: scale(0); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
    .love {
      font-size: 24px;
      color: #e91e63;
      margin-top: 15px;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="box" id="box">Нажми на меня</div>
  
  <img src="cat1.png" class="hidden image" id="cat1">
  <img src="cat2.png" class="hidden image" id="cat2">
  <img src="cat3.png" class="hidden image" id="cat3">
  <img src="girl.png" class="hidden image" id="girl">
  <div class="love hidden" id="loveText">Я тебя люблю ❤️</div>

  <script>
    let step = 0;
    const box = document.getElementById('box');
    const cats = [
      document.getElementById('cat1'),
      document.getElementById('cat2'),
      document.getElementById('cat3'),
    ];
    const girl = document.getElementById('girl');
    const loveText = document.getElementById('loveText');

    box.addEventListener('click', () => {
      if (step < cats.length) {
        cats[step].classList.remove('hidden');
        step++;
      } else if (step === cats.length) {
        girl.classList.remove('hidden');
        loveText.classList.remove('hidden');
        step++;
      }
    });
  </script>
</body>
</html>
